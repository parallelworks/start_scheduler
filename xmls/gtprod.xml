<tool id='NA' name='NA'>
  <command interpreter='bash'>main.sh</command>
  <cancel interpreter='bash'>cancel.sh</cancel>
  <inputs>
      <param 
        name='gt_license_ip' 
        label='License server IP' 
        type='hidden' 
        value='34.70.106.187' 
        help='External IP address of the license server' 
      ></param>
      <param 
        name='gt_license_hostname' 
        label='License server hostname' 
        type='hidden' 
        value='gt-license-server' 
        help='Hostname of the license server' 
      ></param>
      <param 
        name='gt_license_port' 
        label='License server port' 
        type='hidden' 
        value='27005' 
        help='License port' 
      ></param>
      <param 
        name='gt_license_vendor_port' 
        label='License server vendor port' 
        type='hidden' 
        value='27777' 
        help='License vendor port' 
      ></param>
      <param 
        name='customer_org_id' 
        label='ID of the orgazation of the customer' 
        type='hidden' 
        value='6601a2bac2750c88894592aa' 
        help='https://cloud.parallel.works/api/v2/organization' 
      ></param>
      <param 
        name='customer_name' 
        label='Name of the customer' 
        type='hidden' 
        value='gtprod' 
        help='All customers of the PW managed solution share the same user so we need a customer_name to identify them' 
      ></param>
    <section name='pwrl_host' type='section' title='Service host' expanded='true'>
      <param 
        name='resource' 
        type='computeResource' 
        label='Service host' 
        hideUserWorkspace='true' 
        help='Resource to host the service'>
      </param>
    </section>
    <section name='gt' type='section' title='GT Inputs' expanded='true'>
      <param 
        name='version' 
        type='select' 
        label='GT version' 
        help='Select GT software version' 
        multiple='false'
        value='v2023'
        options = "[{'label': 'v2023', 'value': 'v2023'}, 
        {'label': 'v2022', 'value': 'v2022'}, 
        {'label': 'v2021', 'value': 'v2021'}, 
        {'label': 'v2020', 'value': 'v2020'}]">  
      </param>
    </section>
    <section name='adv_gt' type='section' title='Advanced GT Inputs' expanded='false'>
      <param 
        name='sum_serv' 
        type='boolean' 
        truevalue='Yes' 
        falsevalue='No' 
        checked='true' 
        label='Activate job summary service'
      ></param>
      <param 
        name='allow_ps' 
        type='boolean' 
        truevalue='Yes' 
        falsevalue='No' 
        checked='true' 
        label='Allow parallel solver'
      ></param>
    </section>
    <section name='adv_pw' type='section' title='Advanced PW Inputs' expanded='false'>
      <param 
        name='ds_cycle' 
        label='Core demand sensing cycle duration [s]' 
        type='text' 
        value='60' 
        help='Specify the cycle duration for sensing the core demand' 
      ></param>
    </section>
  </inputs>
</tool>
